<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceContainer name="page.wrapper">
            <container name="social.links.container" as="social-links"
                       label="Social Links Container" htmlTag="div" htmlClass="social-links" before="footer-container"/>
        </referenceContainer>
        <referenceContainer name="footer">
            <block name="links_footer_container" class="Magento\Framework\View\Element\Template"
                    template="Magento_Theme::links.phtml" after="icons_footer_container"/>
        </referenceContainer>
        <referenceContainer name="social.links.container">
            <block name="icons_footer_container" class="Magento\Framework\View\Element\Template"
                   template="Magento_Theme::social.phtml" before="-"/>
        </referenceContainer>


    </body>
</page>
